<!-- Login Modal -->
<div id="loginModal" class="modal">
  <!-- Modal content -->
  <div class="modal-content" style="width:400px;">
    <span class="close">&times;</span>
    <form id="loginForm">
      <h3>Client Login</h3>
      {{! EMAIL }}
      <div class="mb-3">
        <label for="loginInputEmail" class="form-label">Email address</label>
        <input
          type="email"
          class="form-control w-100"
          id="loginInputEmail"
          aria-describedby="emailHelp"
          required
        />
      </div>
      {{! PASSWORD }}
      <div class="mb-3">
        <label for="loginInputPassword" class="form-label">Password</label>
        <input
          type="password"
          class="form-control w-100"
          id="loginInputPassword"
        />
      </div>
      <div class="d-flex justify-content-between align-items-center">
        <p id="forgotPasswordBtn" class="text-underline-hover">Forgot password?</p>
        <button
          id="clientLoginBtn"
          type="submit"
          class="btn btn-primary"
        >Login</button>
      </div>
    </form>
    <form id="forgotPasswordForm" class="p-1" style="display:none;">
      <h3>Forgot Password</h3>
      <h4>Please enter your email address:</h4>
      <input id="forgotPWEmailInput" type="email" class="w-100 form-control" />
      <div class="d-flex justify-content-between pt-2">
        <p id="backToLogin" class="text-underline-hover">Back to login</p>
        <button id="sendTempPWBtn" class="btn text-light">Send Temporary
          Password</button>
      </div>
    </form>
    <h4 id="pwResetSuccessMsg" class="text-center" style="display:none;">A
      temporary password has been sent to your email.</h4>
  </div>
</div>